@model RegisterStudentModel

<div class="row">
    <div class="col-md-4">
        <form asp-controller="Account" asp-action="registerStudent" method="post">
            <h2>Create a new account for student</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="@Model.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="@Model.Email">Email</label>
                <span asp-validation-for="@Model.Email" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="@Model.FirstName" class="form-control" autocomplete="firstname" aria-required="true" placeholder="john" />
                <label asp-for="@Model.FirstName">First Name</label>
                <span asp-validation-for="@Model.FirstName" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="@Model.LastName" class="form-control" autocomplete="surname" aria-required="true" placeholder="Smith" />
                <label asp-for="@Model.LastName">Surname Name</label>
                <span asp-validation-for="@Model.LastName" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="@Model.BirthDate" class="form-control" aria-required="true" />
                <label asp-for="@Model.BirthDate"> Birth Date</label>
                <span asp-validation-for="@Model.BirthDate" class="text-danger"></span>
            </div>
            <button type="submit" class="w-100 btn btn-lg btn-primary">Register Student</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
